
public class N3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int horas, minutos, segundos;
		horas= 00;
		minutos = 00;
		segundos=00;
		int numeroSegundos =0;
		int numeroMinutos=0;
		int numeroHoras=0;
		
		while(true) {
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
			
			
			if(segundos==10) {
				
				System.out.println(horasFormat+ ":"+minutosFormat+":"+segundos);
				segundosFormat= String.valueOf(segundos);
			}
			if(minutos==10) {
				
				System.out.println(horasFormat+ ":"+minutos+":"+segundosFormat);
				minutosFormat=String.valueOf(minutos);
			}
			if(horas==10) {
				
				System.out.println(horas+ ":"+minutosFormat+":"+segundosFormat);
				horasFormat=String.valueOf(horas);
			}
				
			if(segundos==59) {
				segundos=00;
				minutos++;
				if(minutos==59) {
					minutos=00;
					horas++;
				}
			}
			String segundosFormat= numeroSegundos+String.valueOf(segundos);
			String minutosFormat= numeroMinutos+String.valueOf(minutos);
			String horasFormat=numeroHoras+String.valueOf(horas);
			System.out.println(horasFormat+ ":"+minutosFormat+":"+segundosFormat);
			segundos++;
			
		}
	}

}
