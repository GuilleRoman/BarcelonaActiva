package Nivel2;

import java.util.Scanner;

public class N2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int filas=5;
		int columnas=3;
		int[][] notas= new int[filas][columnas];
		Scanner sc = new Scanner(System.in);
		for(int i=0; i<filas;i++) {
			for(int j=0;j<columnas;j++) {
				System.out.println("Introduce la nota "+i+" para el alumno en posición "+j);
				notas[i][j]=sc.nextInt();
				
			}
		}
		for(int i=0; i<filas;i++) {
			for(int j=0;j<columnas;j++) {
				System.out.println("Posición "+"["+i+"]"+"["+j+"]"+notas[i][j]);
				int suma= notas[i][j]+notas[i][j];
				if(j==columnas]) {
					System.out.println("Media del primer alumno: "+ suma/3);
				}
				
				
			}
		}
		
		
	}

}
